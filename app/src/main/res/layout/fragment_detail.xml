<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small">

            <ImageView
                android:id="@+id/backgroundImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/darker_gray" />


            <TextView
                style="@style/AppTheme.TextViewTitle"
                android:text="@string/detail_title" />

            <TextView
                android:id="@+id/label_title"
                style="@style/AppTheme.TextViewValue"
                tools:text="asda sdas d" />

            <TextView
                style="@style/AppTheme.TextViewTitle"
                android:text="@string/detail_description" />

            <TextView
                android:id="@+id/label_description"
                style="@style/AppTheme.TextViewValue"

                tools:text="asda sdas asd asd asd asd asd d \n asd asd \n asd asd " />

            <TextView
                style="@style/AppTheme.TextViewTitle"
                android:text="@string/detail_similar" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_similar_tvshows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone" />
</RelativeLayout>